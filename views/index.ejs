<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <!-- Bubbles -->
    <div class="bubble blue"></div>
    <div class="bubble pink"></div>
    <div class="bubble purple"></div>
    <div class="bubble green"></div>

    <div class="container">
      <header>
        <h2>To-Do List</h2>
      </header>

      <!-- Add Task Form -->
      <form action="/add" method="POST" class="add-form">
        <input type="text" name="task" placeholder="Enter new task..." required />
        <button type="submit" class="add">Add</button>
      </form>

      <% if (locals.tasks && locals.tasks.length > 0) { %>
        <form action="/delete-first" method="POST" style="margin-top: 10px;">
          <button type="submit" class="delete">Delete Task</button>
        </form>
      <% } %>

      <!-- Task List -->
      <div class="task-section">
        <% if (locals.tasks && locals.tasks.length > 0) { %>
          <ul class="task-list">
            <% locals.tasks.forEach((t) => { %>
              <li>
                <%= t.task %>
                <form action="/delete/<%= t.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No tasks yet. Please add your first task!</p>
        <% } %>
      </div>

      <footer>
        <p>Â© 2025 To-Do List</p>
      </footer>
    </div>
  </body>
</html>
